{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start HTTP Server",
            "type": "shell",
            "command": "npx --yes http-server . -p 8080 -c-1 --cors",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Available on|Hit CTRL-C"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
